@page
@using Microsoft.AspNetCore.Http
@using System.Text.Json
@using System.Text.Json.Serialization
@model IndexModel
@{
    ViewData["Title"] = "Form";
    var message = ViewData["Message"]?.ToString();
    var alertMessage = ViewData["AlertMessage"]?.ToString();
}


<form method="POST" class="m-4" enctype="multipart/form-data">

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success" role="alert">
            @message
        </div>
    }
    @if (!string.IsNullOrWhiteSpace(alertMessage))
    {
        <div class="alert alert-danger" role="alert">
            @alertMessage
        </div>
    }
    <div class="mb-3">
        <label for="Name" class="form-label">Ad:</label>
        <input type="text" class="form-control" id="Name" name="Name">
    </div>

    <div class="mb-3">
        <label for="Surname" class="form-label">Soyad:</label>
        <input type="text" class="form-control" id="Surname" name="Surname">
    </div>

    <div class="mb-3">
        <label for="BirthDate" class="form-label">Doğum Tarihi:</label>
        <input type="date" class="form-control" id="BirthDate" name="BirthDate">
    </div>

    <label for="Gender" class="form-label" style="margin-top: 5px;">Cinsiyet:</label>
    <div class="form-check">
        <input class="form-check-input" type="radio" id="erkek" name="Gender" value="Erkek">
        <label class="form-check-label" for="erkek">Erkek</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" id="kadin" name="Gender" value="Kadin">
        <label class="form-check-label" for="kadin">Kadın</label>
    </div>
    <div class="form-group" style="margin-top: 16px;">
        <label for="photo">Fotoğraf Seçin:</label>
        <input type="file" id="photo" name="PhotoFile" class="form-control-file" accept="image/*" />


    </div>


    <button type="submit" class="btn btn-primary" style="margin-top: 8px;">Gönder</button>


</form>